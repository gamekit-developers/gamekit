+    int flags = m_value.GetLong();
+
+    const wxPGChoices& choices = m_choices;
+    unsigned int i;
+    for ( i = 0; i < GetItemCount(); i++ )
+    {
+        long flag;
+
+        flag = choices.GetValue(i);
+
+        long subVal = flags & flag;
+        wxPGProperty* p = Item(i);
