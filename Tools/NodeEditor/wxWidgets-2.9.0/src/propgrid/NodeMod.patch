+        iMax = parent->GetChildCount(); \
+        while ( i < iMax ) \
+        {  \
+            wxPGProperty* p = parent->Item(i);
+
+#define ITEM_ITERATION_LOOP_END \
+            if ( p->GetChildCount() ) \
+            { \
+                i = 0; \
+                parent = (wxPGProperty*)p; \
+                iMax = parent->GetChildCount(); \
+            } \
+            else \
+                i++; \
+        } \
+        i = parent->m_arrIndex + 1; \
+        parent = parent->m_parent; \
+    } \
+    while ( parent != NULL );
