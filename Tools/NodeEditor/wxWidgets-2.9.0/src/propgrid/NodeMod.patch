+        for ( ; !it.AtEnd(); it.Next() )
+        {
+            wxPGProperty* p = it.GetProperty();
+            wxPGProperty* parent = p->GetParent();
+            if ( parent->IsCategory() || parent->IsRoot() )
+            {
+                m_abcArray->DoAddChild(p);
