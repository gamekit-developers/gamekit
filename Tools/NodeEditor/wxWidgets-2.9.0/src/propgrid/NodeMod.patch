-void wxPropertyGridPageState::DoSetPropertyValues( const wxVariantList& list, wxPGProperty* defaultCategory )
-{
-    unsigned char origFrozen = 1;
-
-    if ( m_pPropGrid->GetState() == this )
-    {
-        origFrozen = m_pPropGrid->m_frozen;
