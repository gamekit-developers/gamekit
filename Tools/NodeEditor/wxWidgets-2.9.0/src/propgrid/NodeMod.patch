+// -----------------------------------------------------------------------
+
+void wxPropertyGridManager::OnMouseClick( wxMouseEvent &event )
+{
+    int y = event.m_y;
+
+    // Click on splitter.
+    if ( y >= m_splitterY && y < (m_splitterY+m_splitterHeight+2) )
+    {
+        if ( m_dragStatus == 0 )
+        {
+            //
+            // Begin draggin the splitter
+            //
+
+            BEGIN_MOUSE_CAPTURE
+
+            m_dragStatus = 1;
+
+            m_dragOffset = y - m_splitterY;
+
+        }
+    }
+}
