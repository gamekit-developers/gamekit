+    {
+        const wxString& entryLabel = m_choices.GetLabel(i);
+        if ( text.CmpNoCase(entryLabel) == 0 )
+        {
+            useIndex = (int)i;
+            useValue = m_choices.GetValue(i);
+            break;
+        }
+    }
