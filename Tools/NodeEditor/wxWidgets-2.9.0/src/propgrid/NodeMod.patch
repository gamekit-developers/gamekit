+                if ( m_wndEditor2 )
+                {
+                    wxASSERT_MSG( m_wndEditor2->GetParent() == GetPanel(),
+                                  wxT("CreateControls must use result of wxPropertyGrid::GetPanel() as parent of controls.") );
