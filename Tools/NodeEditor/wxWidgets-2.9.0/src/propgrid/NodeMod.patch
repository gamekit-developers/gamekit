-                        {
-                            variant.SetName(childName);
-                            list.Append(variant);
-
-                            changed = true;
-                        }
-                        else
-                        {
-                            // No changes...
-                        }
-                    }
-
-                    curChild++;
-                    if ( curChild >= iMax )
-                        break;
-
-                    addOnlyIfNotEmpty = true;
-
-                    tokenStart = 0xFFFFFF;
-                }
-                else
-                {
-                    tokenStart = pos;
-
-                    if ( a == delimeter )
-                        strPosIncrement -= 1;
-                }
-            }
-        }
-
-        if ( a == 0 )
-            break;
-
-        it += strPosIncrement;
-
-        if ( it != text.end() )
-        {
-            a = *it;
-        }
-        else
-        {
-            a = 0;
-        }
