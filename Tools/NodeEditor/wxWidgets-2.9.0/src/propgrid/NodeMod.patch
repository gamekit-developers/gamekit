+// -----------------------------------------------------------------------
+
+wxString& wxPropertyGrid::ExpandEscapeSequences( wxString& dst_str, wxString& src_str )
+{
+    if ( src_str.length() == 0 )
+    {
+        dst_str = src_str;
+        return src_str;
+    }
+
+    bool prev_is_slash = false;
+
+    wxString::const_iterator i = src_str.begin();
+
+    dst_str.clear();
+
+    for ( ; i != src_str.end(); ++i )
+    {
+        wxUniChar a = *i;
+
+        if ( a != wxS('\\') )
+        {
+            if ( !prev_is_slash )
+            {
+                dst_str << a;
+            }
+            else
+            {
+                if ( a == wxS('n') )
+                {
+            #ifdef __WXMSW__
+                    dst_str << wxS('\n');
+            #else
+                    dst_str << wxS('\n');
+            #endif
+                }
+                else if ( a == wxS('t') )
+                    dst_str << wxS('\t');
+                else
+                    dst_str << a;
+            }
+            prev_is_slash = false;
+        }
+        else
+        {
+            if ( prev_is_slash )
+            {
+                dst_str << wxS('\\');
+                prev_is_slash = false;
+            }
+            else
+            {
+                prev_is_slash = true;
+            }
+        }
+    }
+    return dst_str;
+}
