-
-            if ( !skip )
-            {
-                if ( !curChild->GetChildCount() )
-                    text += wxS("; ");
-                else
-                    text += wxS(" ");
-            }
-
-            curChild = m_children[i+1];
-        }
-    }
-
-    if ( (unsigned int)i < m_children.size() )
-    {
-        if ( !text.EndsWith(wxS("; ")) )
