+    long flags = value;
+    unsigned int i;
+    const wxPGChoices& choices = m_choices;
+
+    for ( i = 0; i < GetItemCount(); i++ )
+    {
+        int doAdd;
+        doAdd = ( flags & choices.GetValue(i) );
+
+        if ( doAdd )
+        {
+            text += choices.GetLabel(i);
+            text += wxS(", ");
+        }
+    }
+
+    // remove last comma
+    if ( text.Len() > 1 )
+        text.Truncate ( text.Len() - 2 );
