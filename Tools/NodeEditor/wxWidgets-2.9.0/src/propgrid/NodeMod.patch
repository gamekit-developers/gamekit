-    int iMax = m_children.size();
-
-    text.clear();
-    if ( iMax == 0 )
-        return;
-
-    if ( iMax > PWC_CHILD_SUMMARY_LIMIT &&
-         !(argFlags & wxPG_FULL_VALUE) )
