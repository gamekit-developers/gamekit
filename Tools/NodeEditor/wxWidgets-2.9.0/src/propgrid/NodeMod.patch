+bool wxStringProperty::DoSetAttribute( const wxString& name, wxVariant& value )
+{
+    if ( name == wxPG_STRING_PASSWORD )
+    {
+        m_flags &= ~(wxPG_PROP_PASSWORD);
+        if ( wxPGVariantToInt(value) ) m_flags |= wxPG_PROP_PASSWORD;
+        RecreateEditor();
+        return false;
+    }
+    return true;
+}
