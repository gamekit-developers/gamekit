+            if ( (GetExtraStyle()&wxPG_EX_MODE_BUTTONS) )
+            {
+                wxString desc1(_("Categorized Mode"));
+                wxString desc2(_("Alphabetic Mode"));
+                m_pToolbar->AddTool(baseId+ID_ADVTBITEMSBASE_OFFSET+0,
+                    desc1,wxBitmap ( (const char**)gs_xpm_catmode ),
